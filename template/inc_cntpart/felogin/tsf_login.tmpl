<!--LOGIN_SETTINGS_START//-->
; this is formatted like WIN.INI
; please: do not use comments for value lines
; Cookie expire set to 90 days
date_format		= "%d.%m.%y"
set_locale		= "de"
cookie_expire	= 7776000
<!--LOGIN_SETTINGS_END//-->

<!--LOGIN_FORM_START//-->
<div class="feLoginForm">

	[ERROR]
	<h3>Login error:</h3>
	<p class="error">
		Benutzername und/oder Kennwort sind falsch.
	</p>
	[/ERROR][ERROR_ELSE]
	<h3>Bitte einloggen:</h3>
	<p>
		Dieser Inhalt unserer Webseite ist nur f&uuml;r Vereinsmitglieder sichtbar. Bitte geben Sie die ausgeh&auml;ngten Benutzerdaten ein!
	</p>
	[/ERROR_ELSE]

	<form action="{FORM_TARGET}" method="post" name="feLoginForm" id="feLoginForm">
	
		<p class="field">
			<label for="feLogin">Benutzername:</label>
			<input type="text" name="feLogin" id="feLogin" value="{LOGIN}" />
		</p>
		<p class="field">
			<label for="fePassword">Kennwort:</label>
			<input type="password" name="fePassword" id="fePassword" value="{PASSWORD}" />
		</p>
		<p class="checkbox">
			<input type="checkbox" name="feRemember" id="feRemember" value="1"{REMEMBER} />
			<label for="feRemember">Logindaten auf diesem Computer speichern</label>
		</p>
		<p class="button">
			<input type="submit" value="anmelden" name="feSubmit" id="feSubmit" />
		</p>
	
	</form>
	
	[REGISTER_PROFILE]<p><a href="{REGISTER_PROFILE}">Register</a></p>[/REGISTER_PROFILE]
	<p><a href="{REMINDER_FORM}">Reminder</a></p>

</div>
<!--LOGIN_FORM_END//-->

<!--LOGIN_IS_START//-->
<div class="feLoggedIn">

	<h3>Hallo, willkomen zur&uuml;ck.</h3>
	<p>Sie sind als <strong>{LOGIN}</strong> eingeloggt.</p>
	[MANAGE_PROFILE]<p>Sie können <a href="{MANAGE_PROFILE}">Ihr Profil bearbeiten</a></p>[/MANAGE_PROFILE]
	
	<form action="{FORM_TARGET}" method="post" name="feLoginForm" id="feLoginForm">
		<p class="button">
			<input type="submit" value="Abmelden" name="feLogout" id="feLogout" />
		</p>
	</form>

</div>
<!--LOGIN_IS_END//-->

<!--PROFILE_REGISTER_START//-->
	
	<h2>Benutzeraccount erstellen</h2>

	{FE_USER_REGISTER}

	<hr />
<!--PROFILE_REGISTER_END//-->

<!--PROFILE_MANAGE_START//-->
	
	<h2>Profil bearbeiten</h2>

	{FE_USER_MANAGE}
	
	<hr />

	<form action="{FORM_TARGET}" method="post" name="feLoginForm" id="feLoginForm">
		<p class="button">
			<input type="submit" value="Abmelden" name="feLogout" id="feLogout" />
		</p>
	</form>

<!--PROFILE_MANAGE_END//-->

<!--REMINDER_FORM_START//-->
<div class="feLoginForm">

	[ERROR]
	<h3>Fehler:</h3>
	<p class="error">
		Bitte &uuml;berpr&uuml;fen Sie Ihre Eingaben. Bitte geben Sie entweder eine E-Mailadresse oder einen Loginnamen ein.
	</p>
	[/ERROR][ERROR_ELSE]
	<h3>Erinnerung:</h3>
	<p>
		Falls Sie Ihren Passwort vergessen haben, geben Sie Ihren Benutzernamen ein.<br> 
		Wenn Sie Ihren Benutzernamen vergessen haben, geben Sie die E-Mail-Adresse ein, die mit Ihrem Konto verbunden ist.
	</p>
	[/ERROR_ELSE]

	<form action="{FORM_TARGET}" method="post" name="feLoginForm" id="feLoginForm">
	
		<p class="field">
			<label for="feReminder">Konto oder E-Mail:</label>
			<input type="text" name="feReminder" id="feReminder" value="{REMINDER}" />
		</p>
		<p class="button">
			<input type="submit" value="Abschicken" name="feSubmit" id="feSubmit" />
		</p>
	
	</form>
	
	[REGISTER_PROFILE]<p><a href="{REGISTER_PROFILE}">Anmelden</a></p>[/REGISTER_PROFILE]
	<p><a href="{LOGIN_URL}">Einloggen</a></p>

</div>
<!--REMINDER_FORM_END//-->

<!--REMINDER_SUCCESS_START//-->
	
	<h3>Reminder success</h3>
	<p>Your request was successful. We have sent a reminder message to your email.</p>
	
	<p><a href="{LOGIN_URL}">Login</a></p>

<!--REMINDER_SUCCESS_END//-->


