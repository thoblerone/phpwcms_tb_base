<!--LOGIN_SETTINGS_START//-->
; this is formatted like WIN.INI
; please: do not use comments for value lines
; Cookie expire set to 90 days
date_format		= "%d.%m.%y"
set_locale		= "de"
cookie_expire	= 7776000
<!--LOGIN_SETTINGS_END//-->

<!--LOGIN_FORM_START//-->
<div class="feLoginForm">

	[ERROR]
	<h3>Login error:</h3>
	<p class="error">
		Benutzername und/oder Kennwort sind falsch.
	</p>
	[/ERROR][ERROR_ELSE]
	<h3>Bitte einloggen:</h3>
	<p>
		Dieser Inhalt unserer Webseite ist nur f&uuml;r Vereinsmitglieder sichtbar. Bitte geben Sie die ausgeh&auml;ngten Benutzerdaten ein!
	</p>
	[/ERROR_ELSE]

	<form action="{FORM_TARGET}" method="post" name="feLoginForm" id="feLoginForm">
	<table>
		<tr>
			<td class="field">
				<label for="feLogin">Benutzername:</label>
			</td>
			<td class="field">
				<input type="text" name="feLogin" id="feLogin" value="{LOGIN}" />
			</td>
		</tr>
		<tr>
			<td class="field">
				<label for="fePassword">Kennwort:</label>
			</td>
			<td class="field">
				<input type="password" name="fePassword" id="fePassword" value="{PASSWORD}" />
			</td>
		</tr>
	</table>

		<p class="checkbox">
			<input type="checkbox" name="feRemember" id="feRemember" value="1"{REMEMBER} />
			<label for="feRemember">Logindaten auf diesem Computer speichern</label>
		</p>
		<p class="button">
			<input type="submit" value="anmelden" name="feSubmit" id="feSubmit" />
		</p>
	
	</form>
	
	[REGISTER_PROFILE]<!-- abgestellt: Registrieren //-->[/REGISTER_PROFILE]
	<!-- abgestellt: Reminder //-->

</div>
<!--LOGIN_FORM_END//-->

<!--LOGIN_IS_START//-->
<div class="feLoggedIn">

	<h3>Hallo, willkomen zum Mitgliederinhalt</h3>
	[MANAGE_PROFILE]
		<!-- abgestellt: Manage Profile//-->
	[/MANAGE_PROFILE]
	
	<form action="{FORM_TARGET}" method="post" name="feLoginForm" id="feLoginForm">
		<p class="button">
			<input type="submit" value="Abmelden" name="feLogout" id="feLogout" />
		</p>
	</form>

</div>
<!--LOGIN_IS_END//-->

